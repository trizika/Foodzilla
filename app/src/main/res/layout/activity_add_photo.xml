<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AvailableEvents">


    <EditText
        android:id="@+id/editTextLocationDetailsReportSpotting1"
        android:layout_width="264dp"
        android:layout_height="43dp"
        android:ems="10"
        android:hint="Enter details about the location"
        android:inputType="textPersonName"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonChoose"
        app:layout_constraintVertical_bias="0.062" />

    <Button
        android:id="@+id/buttonChoose"
        android:layout_width="140dp"
        android:layout_height="47dp"
        android:background="@drawable/shape"
        android:text="Upload Image"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/buttonUpload"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewAdd"
        app:layout_constraintVertical_bias="0.394" />

    <Button
        android:id="@+id/buttonUpload"
        android:layout_width="146dp"
        android:layout_height="47dp"
        android:layout_marginTop="432dp"
        android:layout_marginEnd="124dp"
        android:background="@drawable/shape"
        android:text="Submit Spotting"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.071" />

    <ImageView
        android:id="@+id/imageViewAdd"
        android:layout_width="265dp"
        android:layout_height="248dp"
        android:src="@color/common_google_signin_btn_text_dark_pressed"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.068" />

</androidx.constraintlayout.widget.ConstraintLayout>